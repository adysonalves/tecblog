<main class="container">

    {{>sidebarPainel}}

    <section class="dashboard">

        <h2>Novo post</h2>

        <form action="/painel/update-post" method="post">

            <div class="row">
                <input type="hidden" name="id" value="{{id}}">
                <label for="titulo">Titulo do post</label>
                <input type="text" name="titulo" id="titulo" value="{{titulo}}" required>
            </div>

            <div class="row">
                <label for="conteudo">Conte√∫do</label>
               <textarea name="conteudo" id="conteudo" spellcheck="true" required>{{conteudo}}</textarea>
            </div>

            <div class="row">
                <label for="categoria">Categorias</label>
                <select name="categoria" id="categoria" required>
                    <option value="" disabled>Selecione...</option>
                    <option value="{{categoria}}" selected>{{nomeCategoria}}</option>
                    {{#each categorias}}
                    <option value="{{id}}">{{descricao}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit">Atualizar</button>

        </form>

    </section>
</main>